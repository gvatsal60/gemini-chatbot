{
  "capAdd": [
    "SYS_PTRACE"
  ],
  "containerEnv": {
    "ANONYMIZED_TELEMETRY": "false",
    "DEBIAN_FRONTEND": "noninteractive",
    "PIP_NO_CACHE_DIR": "1",
    "PYTHONDONTWRITEBYTECODE": "1",
    "STREAMLIT_BROWSER_GATHERUSAGESTATS": "false",
    "UV_LINK_MODE": "copy"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "DavidAnson.vscode-markdownlint",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "SonarSource.sonarlint-vscode",
        "Tyriar.sort-lines",
        "bradzacher.vscode-copy-filename",
        "charliermarsh.ruff",
        "docker.docker",
        "ms-azuretools.vscode-containers",
        "ms-python.isort",
        "ms-python.pylint",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "streetsidesoftware.code-spell-checker",
        "usernamehw.errorlens"
      ],
      "settings": {
        "editor.bracketPairColorization.enabled": true,
        "editor.comments.insertSpace": true,
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.snippetSuggestions": "top",
        "editor.tabCompletion": "on",
        "editor.tabSize": 2,
        "editor.trimAutoWhitespace": true,
        "explorer.confirmDelete": false,
        "extensions.ignoreRecommendations": true,
        "files.associations": {
          ".env*": "dotenv"
        },
        "files.autoSave": "afterDelay",
        "files.eol": "auto",
        "files.exclude": {
          "**/.vscode": true
        },
        "github.copilot.enable": {
          "dotenv": false
        },
        "remote.downloadExtensionsLocally": false,
        "search.exclude": {
          "**/*.code-search": true,
          "**/*.git": true,
          "**/*.vscode-server": true,
          "**/bower_components": true,
          "**/node_modules": true
        },
        "workbench.startupEditor": "none"
      }
    }
  },
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "postCreateCommand": "chmod +x ${containerWorkspaceFolder}/.devcontainer/postCreateScript.sh && ${containerWorkspaceFolder}/.devcontainer/postCreateScript.sh",
  "runArgs": [
    "--rm",
    "--name=vsc-${localEnv:USER}-${containerWorkspaceFolderBasename}-${devcontainerId}"
  ]
}
